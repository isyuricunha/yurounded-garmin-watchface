<properties xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://developer.garmin.com/downloads/connect-iq/resources.xsd">

    <property id="BackgroundColor" type="number">0x000000</property>
    <property id="HourColor" type="number">0xFF9966</property>
    <property id="MinuteColor" type="number">0x7A93AC</property>
    <property id="TimeFormat" type="number">0</property>
    <property id="TimeFontSize" type="number">0</property>
    <property id="ShowNotificationIndicator" type="boolean">true</property>
    
    <!-- Battery Settings -->
    <property id="ShowBattery" type="boolean">true</property>
    <property id="BatteryFontSize" type="number">1</property>
    <property id="BatteryDisplayStyle" type="number">0</property>
    <property id="BatteryColor" type="number">-1</property> <!-- -1 = Auto -->
    <property id="BatteryPosition" type="number">2</property> <!-- 0=Top, 1=Middle, 2=Bottom -->
    
    <!-- Date Settings -->
    <property id="ShowDate" type="boolean">false</property>
    <property id="DateFormat" type="number">0</property> <!-- 0=Day/Month, 1=Month/Day, 2=Weekday, 3=Weekday Short -->
    <property id="DatePosition" type="number">0</property> <!-- 0=Top, 1=Bottom, 2=Left, 3=Right -->
    <property id="DateColor" type="number">0x7A93AC</property>
    
    <!-- Seconds Settings -->
    <property id="ShowSeconds" type="boolean">false</property>
    <property id="SecondsColor" type="number">0x7A93AC</property>
    
    <!-- Bluetooth Settings -->
    <property id="ShowBluetooth" type="boolean">false</property>
    <property id="BluetoothPosition" type="number">1</property> <!-- 0=TopLeft, 1=TopRight, 2=BottomLeft, 3=BottomRight -->
    <property id="BluetoothColor" type="number">0x00AAFF</property>

</properties>
